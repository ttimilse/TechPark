<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context="com.topa.techpark.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to ParkSmart"
        android:background="@android:color/darker_gray"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19sp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#F00"
        android:padding="25dp"
        android:id="@+id/textView" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_find"
        android:textSize="23sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:id="@+id/button_find_park"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_safe"
        android:textSize="23sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:id="@+id/button_safe"
        android:layout_below="@+id/button_find_park"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_nite"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="20dp"
        android:id="@+id/button_nite"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/button_safe"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
